<div class="modal fade" id="oauthModal">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            </div>
            <div class="modal-body">
                <iframe id="authFrame" width="100%" height="400px" src="{{siteAddress}}/oauth/authorize?oauth_token={{oauthToken}}&oauth_callback={{siteAddress}}"></iframe>
            </div>
            <div class="modal-footer"></div>
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div><!-- /.modal -->
<style>
    .modal-header {
        border-bottom: 0;
    }
    .modal-footer {
        border-top: 0;
    }
</style>